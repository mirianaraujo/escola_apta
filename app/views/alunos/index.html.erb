<p id="notice"><%= notice %></p>

<h1>Listing Alunos</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Cpf</th>
      <th>Curso escola</th>
      <th>Ativo?</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @alunos.each do |aluno| %>
      <tr>
        <td><%= (aluno.nome if !aluno.nome.nil? ) %></td>
        <td><%= (aluno.cpf if !aluno.cpf.nil?)%></td>
        <td><%= (aluno.curso_escola.curso.nome if !aluno.curso_escola.curso.nil?) if !aluno.curso_escola.nil? %></td>
        <td><%= aluno.ativo %>
        <td><%= link_to 'Visualizar', aluno %></td>
        <td><%= link_to 'Edit', edit_aluno_path(aluno) %></td>
        <td><%= link_to 'Destroy', aluno, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

